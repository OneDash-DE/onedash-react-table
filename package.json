{
	"name": "onedash-react-table",
	"version": "1.0.0",
	"description": " OneDash. React table component",
	"author": "ChewbaccaCookie",
	"license": "MIT",
	"repository": "OneDash-DE/onedash-react-table",
	"main": "dist/index.js",
	"module": "dist/index.modern.js",
	"source": "src/index.ts",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "microbundle --no-sourcemap --css-modules false --jsx React.createElement --format modern",
		"start": "npm run storybook",
		"build-example": "cd example && npm i && npm run build",
		"lint": "npx eslint src/**/*.{js,ts,tsx} --quiet --fix",
		"format": "npx prettier --write src/**/*.{js,ts,tsx}",
		"release": "npx semantic-release",
		"preinstall": "node -e \"!process.env.npm_config_user_agent.startsWith('npm/') && !console.log('Use npm to install dependencies in this repository\\n') && process.exit(1)\"",
		"install-all": "npm i && cd example && npm i",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook -o example"
	},
	"peerDependencies": {
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-scripts": "^4.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@babel/plugin-syntax-nullish-coalescing-operator": "^7.8.3",
		"@semantic-release/git": "^9.0.0",
		"@storybook/addon-actions": "^6.1.6",
		"@storybook/addon-essentials": "^6.1.6",
		"@storybook/addon-links": "^6.1.6",
		"@storybook/preset-create-react-app": "^3.1.5",
		"@storybook/react": "^6.1.6",
		"@types/faker": "^5.1.4",
		"@types/node": "^14.14.7",
		"@types/react": "^16.9.56",
		"@types/react-dom": "^16.9.9",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^4.7.0",
		"@typescript-eslint/parser": "^4.7.0",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.2.1",
		"conventional-changelog-conventionalcommits": "^4.5.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.13.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-config-standard": "^16.0.1",
		"eslint-config-standard-react": "^11.0.1",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-standard": "^4.1.0",
		"faker": "^5.1.0",
		"husky": "^4.3.0",
		"microbundle": "^0.12.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-scripts": "^4.0.0",
		"semantic-release": "^17.2.2",
		"typescript": "^4.0.5",
		"uuid": "^8.3.1"
	},
	"files": [
		"dist"
	],
	"husky": {
		"hooks": {
			"pre-merge": "npm run install-all"
		}
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"dependencies": {
		"node-sass": "^4.14.1"
	}
}
