{
	"name": "onedash-react-table",
	"version": "1.4.0",
	"description": " OneDash. React table component",
	"author": "ChewbaccaCookie",
	"license": "MIT",
	"repository": "OneDash-DE/onedash-react-table",
	"main": "dist/index.js",
	"module": "dist/index.modern.js",
	"source": "src/index.ts",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "microbundle --no-sourcemap --css-modules false --jsx React.createElement --format modern",
		"start": "npm run storybook",
		"lint": "npx eslint src/**/*.{js,ts,tsx} --quiet --fix",
		"format": "npx prettier --write src/**/*.{js,ts,tsx}",
		"release": "npx semantic-release",
		"install-all": "npm i && cd example && npm i",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook -o example"
	},
	"peerDependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"devDependencies": {
		"@babel/core": "^7.13.13",
		"@babel/plugin-syntax-nullish-coalescing-operator": "^7.8.3",
		"@semantic-release/git": "^9.0.0",
		"@storybook/addon-actions": "^6.1.21",
		"@storybook/addon-essentials": "^6.1.21",
		"@storybook/addon-links": "^6.1.21",
		"@storybook/preset-create-react-app": "^3.1.7",
		"@storybook/react": "^6.1.21",
		"@types/faker": "^5.1.7",
		"@types/node": "^14.14.37",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^4.19.0",
		"@typescript-eslint/parser": "^4.19.0",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.2.2",
		"conventional-changelog-conventionalcommits": "^4.5.0",
		"cross-env": "^7.0.3",
		"eslint": "^7.23.0",
		"eslint-config-airbnb-typescript": "^12.3.1",
		"eslint-config-prettier": "^8.1.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-config-standard-react": "^11.0.1",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-promise": "^4.3.1",
		"eslint-plugin-react": "^7.23.1",
		"eslint-plugin-standard": "^5.0.0",
		"faker": "^5.5.0",
		"husky": "^6.0.0",
		"microbundle": "^0.13.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-scripts": "^4.0.3",
		"sass": "^1.32.8",
		"semantic-release": "^17.4.2",
		"typescript": "^4.2.3",
		"uuid": "^8.3.2"
	},
	"files": [
		"dist"
	],
	"husky": {
		"hooks": {
			"pre-merge": "npm run install-all"
		}
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	}
}
